{
  "name": "Custom Invoices for Harvest",
  "description": "Switch easily between languages or custom labels when invoicing in Harvest",
  "version": "0.2",
  "content_scripts":[
    {
      "matches":["https://*.harvestapp.com/invoices/translations"],
      "js" : ["jquery-3.4.1.min.js","content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
     "default_popup": "popup.html",
     "default_title": "Harvest Custom Invoices"
  },
  "manifest_version": 2,
  "author": "Sven Charleer",
  "homepage_url": "https://github.com/svencharleer/harvest_custom_invoices",
  "permissions": [
    "storage"
  ]

}
